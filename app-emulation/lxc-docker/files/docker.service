[Unit]
Description=Docker - The Linux container engine
Requires=network.target
After=multi-user.target
Type=simple

[Service]
Nice=5
ExecStartPre=/bin/sh -c "/bin/mount --make-rprivate /"
ExecStartPre=/bin/sh -c "/sbin/sysctl -w net.ipv4.ip_forward=1"
ExecStart=/bin/sh -c "/usr/bin/docker -d -p /run/docker.pid -D"
ExecStop=/bin/sh -c "/sbin/sysctl -w net.ipv4.ip_forward=0"
TimeoutSec=60
PrivateTmp=true

[Install]
WantedBy=multi-user.target
Wants=network.target

